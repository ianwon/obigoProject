<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="obigoproject.Resource">

	<resultMap type="Resource" id="ResourceResultMap">
		<result column="RESOURCE_NUMBER" property="resourceNumber" />
		<result column="RESOURCE_NAME" property="resourceName" />
		<result column="PATH" property="path" />
		<result column="RESOUCE_VERSION" property="resourceVersion" />
		<result column="BUNDLE_KEY" property="bundleKey" />
	</resultMap>

	<insert id="insertResource" parameterType="Resource">
		<![CDATA[
		insert into RESOURCES values(SQ_RESOURCES_NUMBER.nextval, #{resourceName}, #{path}, #{resourceVersion}, #{bundleKey})
		]]>
	</insert>

	<delete id="deleteResource" parameterType="java.lang.Integer">
		<![CDATA[
		delete from RESOURCES where RESOURCE_NUMBER=#{resourceNumber}
		]]>
	</delete>

	<update id="updateResource" parameterType="Resource">
		<![CDATA[
		update RESOURCES set RESOURCE_NAME=#{resourceName}, PATH=#{path}, RESOUCE_VERSION=#{resourceVersion} where RESOURCE_NUMBER=#{resourceNumber}
		]]>
	</update>

	<select id="selectResourceList" parameterType="java.lang.String" resultMap="ResourceResultMap"> 
		<![CDATA[ 
		select * from RESOURCES where BUNDLE_KEY=#{bundleKey}
		]]>
	</select>
	
	<select id="selectResource" parameterType="java.lang.Integer" resultMap="ResourceResultMap"> 
		<![CDATA[ 
		select * from RESOURCES where RESOURCE_NUMBER=#{resourceNumber}
		]]>
	</select>


</mapper>